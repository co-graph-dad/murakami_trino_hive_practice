<?xml version="1.0" encoding="UTF-8"?>
<configuration>
  <!-- Hadoop に MinIO を S3A ストレージとして認識させるための設定 -->

  <!-- S3A ファイルシステムの実装クラスを指定 -->
  <property>
    <name>fs.s3a.impl</name>
    <value>org.apache.hadoop.fs.s3a.S3AFileSystem</value>
  </property>

  <!-- MinIO 接続に使用するアクセスキー（認証用） -->
  <property>
    <name>fs.s3a.access.key</name>
    <value>minioadmin</value>
  </property>

  <!-- MinIO 接続に使用するシークレットキー（認証用） -->
  <property>
    <name>fs.s3a.secret.key</name>
    <value>minioadmin</value>
  </property>

  <!-- MinIO のサービスエンドポイント URL を指定 -->
  <property>
    <name>fs.s3a.endpoint</name>
    <value>http://minio:9000</value>
  </property>

  <!-- MinIO では AWS の仮想ホスト方式ではなくパス方式でのアクセスが必要なため有効化 -->
  <property>
    <name>fs.s3a.path.style.access</name>
    <value>true</value>
  </property>
</configuration>
